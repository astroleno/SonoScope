{
  "name": "sonoscope",
  "version": "1.0.0",
  "description": "基于浏览器的实时音乐可视化与弹幕引擎",
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter app dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "audio",
    "visualization",
    "music",
    "p5js",
    "web-audio",
    "real-time",
    "accessibility"
  ],
  "author": "SonoScope Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/sonoscope.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/sonoscope/issues"
  },
  "homepage": "https://sonoscope.dev"
}
